<?xml version="1.0" encoding="utf-8" ?>
<ContentView  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppleMusicApp.Views.LibraryPageContent">
    <VerticalStackLayout>
        <Grid Margin="0,5" Padding="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Image x:Name="image" Grid.Column="0" Source="note.png" HeightRequest="24" WidthRequest="24" VerticalOptions="Center" />
            <Label x:Name="label" Grid.Column="1" Text="Menu 1" VerticalOptions="Center" Margin="10,0" />
            <Image Grid.Column="2" Source="arrow_right.png" HeightRequest="24" WidthRequest="24" VerticalOptions="Center" HorizontalOptions="End" />
        </Grid>
        <BoxView BackgroundColor="Gray"
                             HeightRequest="1"
                             HorizontalOptions="FillAndExpand"
                             Margin="0,5,0,0" />

    </VerticalStackLayout>
    
</ContentView>

