<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AppleMusicApp"
             x:Class="AppleMusicApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                
            </ResourceDictionary.MergedDictionaries>
            <ResourceDictionary>
                <Style x:Key="LightTheme" TargetType="Application">
                    <Setter Property="BackgroundColor" Value="White" />
                    <!-- Autres styles pour le thème Light -->
                </Style>

                <Style x:Key="DarkTheme" TargetType="Application">
                    <Setter Property="BackgroundColor" Value="Black" />
                    <!-- Autres styles pour le thème Dark -->
                </Style>
            </ResourceDictionary>
        </ResourceDictionary>
    </Application.Resources>
</Application>

