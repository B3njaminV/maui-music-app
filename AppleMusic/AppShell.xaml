<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AppleMusic.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AppleMusic"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
                Icon="listen"
                Title="Ecouter"
                ContentTemplate="{DataTemplate local:Bibliotheque}"
                Route="UnknowPage" />

        <ShellContent
                Icon="explore"
                Title="Explorer"
                ContentTemplate="{DataTemplate local:Bibliotheque}"
                Route="UnknowPage" />

        <ShellContent
                Icon="radio"
                Title="Radio"
                ContentTemplate="{DataTemplate local:Bibliotheque}"
                Route="UnknowPage"/>

        <ShellContent
                Icon="library"
                Title="Librairie"
                ContentTemplate="{DataTemplate local:Bibliotheque}"
                Route="LibraryPage" 
                FlyoutItemIsVisible="True"/>

        <ShellContent
                Icon="search"
                Title="Recherche"
                ContentTemplate="{DataTemplate local:Bibliotheque}"
                Route="UnknowPage" />
    </TabBar>
</Shell>
